@using UCS_CRM.ViewModel
@model SystemConfigurationViewModel
@using Microsoft.Extensions.Configuration

@inject IConfiguration Configuration
@{
    ViewData["Title"] = "System Configuration";
    Layout = "~/Areas/Manager/Views/shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/custom_select.css" rel="stylesheet" />
}

<div class="card">
    <div class="card-header">
        <h4 class="text-center text-uppercase">System Configuration</h4>
        <div>
            <img src="~/images/91.gif" id="spinner" />
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>System Date Configuration</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateDateConfiguration" method="post">
                            <div class="form-group">
                                <label asp-for="DateConfiguration.TimeZone">Time Zone</label>
                                <select asp-for="DateConfiguration.TimeZone" class="form-control">
                                    @foreach (var timezone in TimeZoneInfo.GetSystemTimeZones())
                                    {
                                        <option value="@timezone.Id">@timezone.DisplayName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateConfiguration.DateFormat">Date Format</label>
                                <select asp-for="DateConfiguration.DateFormat" class="form-control">
                                    <option value="MM/dd/yyyy">MM/dd/yyyy</option>
                                    <option value="dd/MM/yyyy">dd/MM/yyyy</option>
                                    <option value="yyyy-MM-dd">yyyy-MM-dd</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateConfiguration.FirstDayOfWeek">First Day of Week</label>
                                <select asp-for="DateConfiguration.FirstDayOfWeek" class="form-control">
                                    <option value="0">Sunday</option>
                                    <option value="1">Monday</option>
                                </select>
                            </div>
                            <div class="form-check mb-3">
                                <input asp-for="DateConfiguration.UseSystemTime" class="form-check-input" type="checkbox" />
                                <label asp-for="DateConfiguration.UseSystemTime" class="form-check-label">Use System Time</label>
                            </div>
                            <div class="form-group" id="customDateTimeDiv">
                                <label asp-for="DateConfiguration.CustomDateTime">Custom Date/Time</label>
                                <input asp-for="DateConfiguration.CustomDateTime" class="form-control" type="datetime-local" />
                            </div>
                            <button type="submit" class="btn btn-primary">Save Configuration</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Holiday Management</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="holidaysTable">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Recurring</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/custom_select.js"></script>
    <script src="~/js/SystemConfiguration.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}