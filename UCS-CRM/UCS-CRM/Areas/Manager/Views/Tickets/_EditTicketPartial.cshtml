@model UCS_CRM.Core.DTOs.Ticket.EditTicketDTO
<!-- Modal -->

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Update Ticket</h5>
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <input asp-for="DataInvalid" type="hidden"/>
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" placeholder="Enter Ticket Title" class="form-control" disabled="disabled"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" placeholder="Enter Description" class="form-control" disabled="disabled"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TicketPriorityId"></label>
                    <select asp-for="TicketPriorityId" asp-items="@ViewBag.priorities" class="form-control"></select>
                    <span asp-validation-for="TicketPriorityId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TicketCategoryId"></label>
                    <select asp-for="TicketCategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
                    <span asp-validation-for="TicketCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StateId"></label>
                    <select asp-for="StateId" asp-items="@ViewBag.states" class="form-control"></select>
                    <span asp-validation-for="StateId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MemberId"></label>
                    <select asp-for="MemberId" asp-items="@ViewBag.members" class="form-control select2-single" style="width:100%"></select>
                    <span asp-validation-for="MemberId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AssignedToId"></label>
                    <select asp-for="AssignedToId" asp-items="@ViewBag.Assignees" class="form-control" style="width:100%"></select>
                    <span asp-validation-for="AssignedToId" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <label for="Attachments" class="form-label">Upload Ticket Attachments</label>
                  <input class="form-control" type="file" id="Attachments" name="Attachments" multiple>
                </div>


            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="update_ticket_btn" name="update_ticket_btn">Edit Ticket</button>
        </div>
    </div>
</div>
