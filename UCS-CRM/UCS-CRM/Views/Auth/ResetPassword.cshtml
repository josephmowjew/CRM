@{
    Layout = "";

    @model UCS_CRM.Models.ResetPassword
}

<!DOCTYPE html>
    <head>
        <title>UCS SACCO CRM</title>
         <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link href="~/css/page.css" rel="stylesheet" />
         <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.ico">
    </head>
    <body>
        <section class="vh-100" style="background-color: #eee;">
          <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                  <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                      <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Reset Password</p>

                        <form class="mx-1 mx-md-4" asp-action="ResetPassword" asp-antiforgery="true" method="post">
                           
                       
                              <input type="hidden" asp-for="Email" placeholder="Enter email to receive reset info" class="form-control" />
                              <input type="hidden" asp-for="Token" placeholder="Enter email to receive reset info" class="form-control" />
                             
                              <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                <div class="form-outline flex-fill mb-0">
                                    <input type="password" asp-for="Password" placeholder="Enter new password" class="form-control" />
                                    <label class="form-label" asp-for="Password">Your New Password</label>
                                    <div>
                                        <span asp-validation-for="Password"  class="text-danger"></span>
                                    </div>
                              
                                </div>
                              </div>
                               <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                <div class="form-outline flex-fill mb-0">
                                    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                                    <label class="form-label" asp-for="Password">Confirm Password</label>
                                    <div>
                                        <span asp-validation-for="ConfirmPassword"  class="text-danger"></span>
                                    </div>
                              
                                </div>
                              </div>
                           
                          <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" class="btn btn-primary btn-lg">Reset Password</button>
                          </div>

                        </form>
                         <div class="d-flex justify-content-end align-items-center">
                          <!-- Checkbox -->
                          <a asp-action="create" asp-controller="auth" class="text-body">Back To Login</a>
                        </div>
                      </div>
                      <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="~/images/LOGO(1).png" style="width:50%; height:50%"
                          class="img-fluid" alt="Sample image">

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
    </body>
</html>