@{
    Layout = "";

    @model UCS_CRM.Core.ViewModels.ClientRegisterViewModel

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>UCS SACCO CRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/page.css" rel="stylesheet" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.ico">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }
        .content-wrapper {
            flex: 1 0 auto;
        }
        .footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <section style="background-color: #eee; min-height: 100%;">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class="card text-black my-4" style="border-radius: 25px;">
                            <div class="card-body p-md-5">
                                <div class="row justify-content-center">
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign Up As A User </p>

                                        <form class="mx-1 mx-md-4" asp-action="Register" asp-antiforgery="true" method="post">
                                            <div asp-validation-summary="All" class="text-danger">
                                                
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="text" asp-for="NationalId" placeholder="Enter National Id" class="form-control" />
                                                    <label class="form-label" asp-for="NationalId">National Id</label>
                                                    <div>
                                                        <span asp-validation-for="NationalId" class="text-danger"></span>
                                                    </div>

                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="email" asp-for="Email" placeholder="Enter Email" class="form-control" />
                                                    <label class="form-label" asp-for="Email">Your Email</label>
                                                    <div>
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>

                                                </div>
                                            </div>  <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">                                            
                                                    <select asp-for="Gender" asp-items="@ViewBag.genderList" class="form-control"></select>

                                                    <label class="form-label" asp-for="Gender">Your Gender</label>
                                                    <div>
                                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                                    </div>

                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="Password" asp-for="Password" placeholder="Enter Password" class="form-control" />
                                                    <label class="form-label" asp-for="Password">Password</label>
                                                    <div>
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>

                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Your Password" class="form-control" />
                                                    <label class="form-label" asp-for="ConfirmPassword">Repeat your password</label>
                                                    <div>
                                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            @* <div class="form-check d-flex justify-content-center mb-5">
                                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                            <label class="form-check-label" for="form2Example3">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                            </label>
                                            </div>*@

                                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                <button type="submit" class="btn btn-primary btn-lg">Register User</button>
                                            </div>

                                        </form>
                                        <div class="d-flex justify-content-end align-items-center">
                                            <!-- Checkbox -->
                                            <a asp-action="create" asp-controller="auth" class="text-body">Back To Login</a>
                                        </div>
                                    </div>
                                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex justify-content-center align-items-center order-1 order-lg-2">
                                        <div style="width: 100%; max-width: 300px; height: 300px; display: flex; justify-content: center; align-items: center;">
                                            <img src="~/images/LOGO(1).png" style="max-width: 100%; max-height: 100%; object-fit: contain;"
                                                 class="img-fluid" alt="UCS SACCO CRM Logo">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <footer class="footer bg-primary text-white py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <a href="https://www.sparcsystems.africa" target="_blank" style="color:aliceblue; text-decoration:none;">Copyright © 2024. All rights reserved. Developed by Sparc Systems Limited</a>
                </div>
                <div class="col-md-6 text-end">
                    <p class="mb-0">For Support, Contact Us on <strong>3087</strong></p>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col text-end">
                    <a href="#!" class="text-white me-4"><i class="fab fa-facebook-f"></i></a>
                    <a href="#!" class="text-white me-4"><i class="fab fa-twitter"></i></a>
                    <a href="#!" class="text-white me-4"><i class="fab fa-google"></i></a>
                    <a href="#!" class="text-white"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>